---
import {CollectionEntry, getCollection} from "astro:content"
import {Image} from "@astrojs/image/components"

import Layout from "../../layouts/Layout.astro"
import PostList from "../../components/PostList.astro"
import CategoryList from "../../components/CategoryList.astro"
import Share from "../../components/Share.astro"
import {getThumbnail} from "../../cloudinary"
import TableOfContents from "../../components/TableOfContents.astro"

export const getStaticPaths = async () => {
    const posts = await getCollection("posts")
    const authors = await getCollection("authors")

    const paths = posts.map(post => {
        const relatedPosts = posts
            .filter(p => p.slug !== post.slug)
            .filter(p =>
                p.data.categories.some(category =>
                    post.data.categories.includes(category),
                ),
            )

        return {
            params: {
                slug: post.slug,
            },
            props: {
                post,
                author,
                relatedPosts,
            },
        }
    })

    return paths
}

type Props = {
    post: CollectionEntry<"posts">
    author: CollectionEntry<"authors">
    relatedPosts: CollectionEntry<"posts">[]
}

const {post, author, relatedPosts} = Astro.props
const {Content, headings, remarkPluginFrontmatter} = await post.render()
---

<Layout title={post.data.title} image={getThumbnail(post.data.title)}>
    <main class="px-24 max-sm:px-5 max-w-5xl w-full justify-self-center">
        <div class="text-zinc-500 text-2xl mb-16">
            ‚Üê <a href="/blog" class="underline">Back to all blogs</a>
        </div>

        <div class="mb-4">
            <CategoryList categories={post.data.categories} />
        </div>

        <p class="text-6xl text-teal-900 mb-11 font-bold">
            {post.data.title}
        </p>

        <div class="flex justify-between items-center mb-10">
            <div class="flex items-center gap-x-2">
                <a href={`/author/${author.slug}`}>
                    <Image
                        src={author.data.image}
                        alt={author.data.name}
                        width={48}
                        height={48}
                        format="webp"
                        class="rounded-full border-2 border-teal-500 aspect-square w-12 object-cover"
                    />
                </a>

                <a
                    href={`/author/${author.slug}`}
                    class="text-zinc-600 text-2xl font-bold"
                >
                    {author.data.name}
                </a>
            </div>

            <span class="text-zinc-600 text-xl">
                {remarkPluginFrontmatter.minutesRead} | {post.data.date}
            </span>
        </div>

        <Image
            src={post.data.image}
            alt={post.data.title}
            width={1024}
            height={1024 / 1.5}
            format="webp"
            class="rounded-2xl shadow-xl mb-28 aspect-thumbnail object-cover"
        />

        <div class="relative flex gap-x-12">
            <Share post={post} />

            <div class="prose prose-2xl overflow-visible relative">
                <Content />
            </div>

            <TableOfContents headings={headings} />
        </div>
    </main>

    <div class="px-24 pt-56 pb-80 max-w-7xl mx-auto">
        <p class="font-bold text-teal-900 text-4xl mb-16">Related posts</p>
        <PostList posts={relatedPosts} />
    </div>
</Layout>
